version: "3.8"

services:
  mariadb:
    build: ./requirements/mariadb
    image: mariadb
    container_name: mariadb
    env_file:
      - .env
    restart: always
    volumes:
      - ${HOST_DATA_PATH}/mariadb:/var/lib/mysql
      - ./requirements/mariadb/conf/50-server.cnf:/etc/mysql/mariadb.conf.d/50-server.cnf
    networks:
      - inception

  wordpress:
    build: ./requirements/wordpress
    image: wordpress
    container_name: wordpress
    depends_on:
      - mariadb
    env_file:
      - .env
    restart: unless-stopped
    volumes:
      - ${HOST_DATA_PATH}/wordpress:/var/www/html
    networks:
      - inception

  nginx:
    build: ./requirements/nginx
    image: nginx
    container_name: nginx
    depends_on:
      - wordpress
    env_file:
      - .env
    restart: always
    ports:
      - "443:443"
    volumes:
      - ${HOST_DATA_PATH}/wordpress:/var/www/html:ro
      - ${HOST_DATA_PATH}/nginx/conf.d:/etc/nginx/conf.d
      - ${HOST_DATA_PATH}/nginx/certs:/etc/nginx/certs
    networks:
      - inception

networks:
  inception:
    driver: bridge
